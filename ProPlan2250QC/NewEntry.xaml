<Window x:Class="ProPlan2250QC.NewEntry"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProPlan2250QC"
        mc:Ignorable="d"
        Title="Yeni Giriş" Height="120" Width="300" ResizeMode="NoResize" WindowStyle="ToolWindow">
    <Grid>
        <StackPanel>
            <!--<TextBlock Text="Yeni giriş ismi:" Margin="10,10,10,0" />-->
            <TextBox x:Name="ResponseTextBox" Margin="10,5,10,0" />
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Button x:Name="btnCancel" Grid.Column="0" Content="İptal" Height="34" Margin="10,10,0,0" Width="100" Click="btnCancel_Click" />
                <Button x:Name="btnAdd" Grid.Column="1" Content="Ekle" Height="34" Margin="0,10,0,0" Width="100" Click="btnAdd_Click" />
            </Grid>
        </StackPanel>
    </Grid>
</Window>
